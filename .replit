modules = ["python-3.11"]
[nix]
channel = "stable-25_05"
packages = ["libxcrypt", "libyaml", "unzip"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PCILeech GUI"

[[workflows.workflow]]
name = "PCILeech GUI"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd PCILeechFWGenerator && python3 gui/app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80
